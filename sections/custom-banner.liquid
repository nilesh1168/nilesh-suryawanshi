<section class="custom-banner">
  <div class="custom-banner__wrapper">
    <h1>{{ section.settings.heading }}</h1>
    <p>{{ section.settings.subheading }}</p>
    <button class="animated-btn">{{ section.settings.cta_text }}</button>
  </div>
</section>

<style>
  .custom-banner {
    background: url({{ 'banner.jpeg' | asset_url }}) no-repeat center;
    background-size: cover;
    padding: 60px 20px;
    text-align: center;
  }
  .animated-btn {
    animation: pulse 2s infinite;
  }
  @keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.05); }
    100% { transform: scale(1); }
  }
</style>

{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Your Custom Banner Heading" },
    { "type": "text", "id": "subheading", "label": "Subheading", "default": "Your subheading here" },
    { "type": "text", "id": "cta_text", "label": "Button Text", "default": "Shop Now" }
  ],
  "presets": [{ "name": "Custom Banner" }]
}
{% endschema %}